# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/agentforge
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs
STRIPE_PRICE_PREMIUM=price_premium_monthly
STRIPE_PRICE_ENTERPRISE=price_enterprise_monthly

# OpenClaw API (if using external service)
OPENCLAW_API_URL=https://api.openclaw.io
OPENCLAW_API_KEY=

# Email (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@agentforge.io

# Admin
ADMIN_EMAIL=admin@agentforge.io
ADMIN_PASSWORD=change_this_secure_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=false
